#!/usr/bin/env bash
set -e

# Example:
#  geckodriver --version 2>&1
#=> geckodriver 0.10.0
#=> ...... The source is available at....

# Example:
#=> 0.10.0
CMD="geckodriver"
if ${CMD} --version >/dev/null 2>&1; then
  ${CMD} --version 2>&1 | grep -Po '(?<=geckodriver )([a-z0-9\.]+)'
else
  ${CMD} --version #fail and show error
fi
