#!/usr/bin/env ruby_executable_hooks
#
# This file was generated by RubyGems.
#
# The application 'rspec-core' is installed as part of a gem, and
# this file is here to facilitate running it.
#

require 'rubygems'

version = ">= 0.a"

if ARGV.first
  str = ARGV.first
  str = str.dup.force_encoding("BINARY") if str.respond_to? :force_encoding
  if str =~ /\A_(.*)_\z/ and Gem::Version.correct?($1) then
    version = $1
    ARGV.shift
  end
end

gem 'rspec-core', version

require 'rspec'
# https://github.com/ph7/selenium-client
require 'selenium/client'

# Avoid seeing deprecation warnings
RSpec.configure do |config|
  config.deprecation_stream = 'deprecations.log'
end

# Avoid ERROR: Threw an exception: illegal character ruby timeout.rb
module Selenium::Client::GeneratedDriver
  def get_eval(script); return ''; end
end

load Gem.bin_path('rspec-core', 'rspec', version)
